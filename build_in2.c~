#include "shell.c"
/**
 * _unsetenv - remove an envir variable
 * @arv: array of words
 */
void _unsetenv(char **arv)
{
int i, j;
if (!arv[1])
{
perror(get_env("_"));
return;
}
for (i = 0; environ[i]; i++)
{
j = 0;
if (arv[1][j] == environ[i][j])
{
while (arv[1][j])
{
if (arv[1][j] != environ[i][j])
break;
j++;
}
if (arv[1][j] == '\0')
{
free(environ[i]);
environ[i] = environ[i + 1];
while (environ[i])
{
environ[i] = environ[i + 1];
i++;
}
return;
}
}
}
}
/**
 * exiit - exit the shell
 * @arv: array of words
 */
void exiit(char **arv)
{
int i, n;
if (arv[1] != NULL)
{
n = _atoi(arv[1]);
n = (n <= -1) ? 2 : n;
free_arv(arv);
exit(n);
}
for (i = 0; arv[i] != NULL; i++)
{
free(arv[i]);
}
free(arv);
exit(0);
}
